<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="authorityunit">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>


		<class>com.water.metamodel.account.Account</class>
		<class>com.water.metamodel.account.AccountAdmin</class>
		<class>com.water.metamodel.account.AccountWeb</class>
		<class>com.water.metamodel.account.AccountLog</class>
		<class>com.water.metamodel.account.AccountOperatorLog</class>

		<class>com.water.metamodel.tree.Category</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver" />
			<property name="hibernate.connection.username" value="water" />
			<property name="hibernate.connection.password" value="water" />
			<property name="hibernate.default_schema" value="water" />
			<property name="hibernate.connection.url" value="jdbc:oracle:thin:@127.0.0.1:1521:ORCLGBK" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<!-- validate | update | create | create-drop -->
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<!--These statements are only executed if the schema is created ie if hibernate.hbm2ddl.auto is set to create or create-drop.  -->
			<!-- hibernate.hbm2ddl.import_files_sql_extractor -->
			<property name="hibernate.hbm2ddl.import_files" value="/META-INF/instanceSystem.sql" />
			<property name="hibernate.jdbc.batch_size" value="30" />
			
		</properties>
	</persistence-unit>
</persistence>
